<div id="post_show_container">
  <div id="post_show_container_upper">
  <div id="post_show_container_header">
    <h3>Post #<%= @post.id%> by <%=@user.name%></h3>
    <h5>Comments:<%= @post.comments_counter%> Likes: <%=@post.likes_counter%></h5>
  </div>
  <p><%= @post.text %></p>
  </div>
  <% @comments=Comment.where(post_id:@post.id) %>
  <div id="container_index_posts_show_comments_container">
    <% @comments.each do |comment| %>
      <p><%=@user.name%>: <%= comment.id %></p>
    <% end %>
  </div>
</div>
