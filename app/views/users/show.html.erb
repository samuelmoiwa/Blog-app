<div id="show_container_user">
  <%= render @user %>
  <div id="show_container_user_bio">
    <h4>Bio</h4>
    <p>
      Lorem ipsum dolor sit amet,
      consectetur adipiscing elit,
      sed do eiusmod tempor incididunt ut
      labore et dolore magna aliqua.
      Ut enim ad minim veniam, quis nostrud exercitation ullamco
      laboris nisi ut aliquip ex ea commodo consequat.
    </p>
  </div>
  <% @user.three_posts.each do |post|%>
    <div class='post' id="show_container_user_id">
      <h3> <%= link_to post.title, "/users/#{@user.id}/posts/#{post.id}" %></h3>
      <p><%= post.text %></p>
      <h4>Comments <%= post.comments_counter %> likes: <%= post.likes_counter %></h4>
    </div>
  <% end %>

  <div id="show_container_user_button_container">
    <button id="show_container_user_button"><%= link_to "See all posts", "/users/#{@user.id}/posts" %></button>
  </div>
</div>
